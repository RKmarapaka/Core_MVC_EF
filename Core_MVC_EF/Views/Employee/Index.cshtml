

@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";
}

 <h1>Employee List</h1>
 <a href="/Employee/Create" class="btn btn-primary" style="width:auto">Add New Emplyee</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>

            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Department</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>

            <td>@employee.Name</td>
            <td>@employee.Email</td>
            <td>@employee.City</td>
            <td>@employee.DepartmentId</td>

            <td>
                <a href="/Employee/Details/@employee.Id" class="btn btn-success">Details</a>
                <a href="/Employee/Edit/@employee.Id" class="btn btn-primary">Edit</a>
                <a href="/Employee/Delete/@employee.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


