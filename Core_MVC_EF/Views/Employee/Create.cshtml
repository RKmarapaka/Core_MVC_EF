

@model EmployeeCreateViewModel
@{
    ViewBag.Title = "Add Employee";
}

    <h1>Add Employee</h1>
    <form enctype="multipart/form-data" asp-controller="Employee" asp-action="Create" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Name" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="City" class="form-control" placeholder="Enter City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DepartmentId" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <select asp-for="DepartmentId" asp-items="@ViewBag.DeptListName" class="custom-select mr-sm-2">
                    <option value="">-- Please Select --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose file....</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary" style="width:auto">Add Employee</button>
                <a href="/Employee/Index" class="btn btn-secondary">Back</a>
            </div>
        </div>

        @section Scripts{

            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var FileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(FileName);
                    });
                });
            </script>
        }
    </form>


